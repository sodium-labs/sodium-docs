{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "sodium-docs",
    "version": "1.0.0",
    "private": true,
    "description": "The Sodium Labs docs",
    "license": "Apache-2.0",
    "author": "SodiumLabs",
    "homepage": "https://github.com/sodium-labs/sodium-docs#readme",
    "bugs": {
        "url": "https://github.com/sodium-labs/sodium-docs/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sodium-labs/sodium-docs.git"
    },
    "scripts": {
        "dev": "dotenv -- next dev",
        "build": "npm run lint && next build",
        "start": "dotenv -- next start",
        "lint": "oxlint && oxfmt --check",
        "fmt": "oxfmt",
        "docs:build": "node docs/install && node docs/build-docs && node docs/patch-docs"
    },
    "dependencies": {
        "dotenv-cli": "^8.0.0",
        "lucide-react": "^0.515.0",
        "next": "^16.0.7",
        "react": "^19.2.1",
        "react-dom": "^19.2.1",
        "typedoc": "^0.28.5",
        "typedoc-material-theme": "^1.4.0",
        "typedoc-plugin-zod": "^1.4.1"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "oxfmt": "^0.16.0",
        "oxlint": "^1.31.0",
        "tailwindcss": "^4",
        "typescript": "^5"
    }
}
