{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "sodium-docs",
    "version": "2.1.0",
    "private": true,
    "description": "The Sodium documentation website",
    "homepage": "https://github.com/sodium-labs/sodium-docs#readme",
    "bugs": {
        "url": "https://github.com/sodium-labs/sodium-docs/issues"
    },
    "license": "Apache-2.0",
    "author": "sodiumlabs",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sodium-labs/sodium-docs.git"
    },
    "type": "module",
    "scripts": {
        "dev": "dotenv -- next dev",
        "build": "npm run lint && next build --webpack",
        "start": "concurrently --kill-others \"npm run updater\" \"dotenv -- next start\"",
        "lint": "oxlint && oxfmt --check",
        "fmt": "oxfmt",
        "chunk": "tsx scripts/chunk-docs",
        "updater": "dotenv -- tsx scripts/updater",
        "postinstall": "next typegen"
    },
    "dependencies": {
        "@microsoft/api-extractor-model": "^7.32.2",
        "@microsoft/tsdoc": "^0.16.0",
        "@radix-ui/react-collapsible": "^1.1.12",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.8",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-switch": "^1.2.6",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@react-icons/all-files": "^4.1.0",
        "@tanstack/react-query": "^5.90.12",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "^1.1.1",
        "concurrently": "^9.2.1",
        "dotenv-cli": "^11.0.0",
        "jotai": "^2.16.1",
        "lucide-react": "^0.562.0",
        "next": "16.1.1",
        "overlayscrollbars": "^2.13.0",
        "overlayscrollbars-react": "^0.5.6",
        "react": "19.2.3",
        "react-aria-components": "^1.14.0",
        "react-dom": "19.2.3",
        "react-icons": "^5.5.0",
        "react-markdown": "^10.1.0",
        "rehype-raw": "^7.0.0",
        "remark-gfm": "^4.0.1",
        "shiki": "^3.20.0",
        "tailwind-merge": "^3.4.0",
        "tsx": "^4.21.0",
        "typescript": "^5",
        "usehooks-ts": "^3.1.1"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4",
        "@tailwindcss/typography": "^0.5.19",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "oxfmt": "^0.20.0",
        "oxlint": "^1.35.0",
        "tailwindcss": "^4",
        "tw-animate-css": "^1.4.0"
    }
}
